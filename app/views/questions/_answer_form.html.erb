<%= simple_form_for [@question, @answer] do |form| %>
  <p>
    <h3><%= form.label :Your_answer %></h3>
    <%= form.text_area :description, :required => true, :class => "answer_text_area" %>
  </p>
  <p>
    <%= form.submit "Post Your Answer" %>
  </p>
<% end %>
<%= link_to '<button class="btn btn-info" type="button">Back</button>'.html_safe, questions_path %>
