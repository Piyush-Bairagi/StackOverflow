<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <center>
      <h1><u>All Questions :-</u></h1><br>
      <%= button_to 'Ask Question', new_question_path, method: :get, class: "btn btn-primary" %><br><br>
      <h3><u>Total <%= @total_questions %> <%= @total_questions <= 1  ? 'Question' :  'Questions' %></u></h3>
      <br>
    </center>

    <div id="question_list"><hr>
      <% @questions.each do |question| %>
        <div class="question_box">
            <div class="box_row">
              <div class="box_cell box1">
                <h3 class="answers_counts"><%= question.answers.count %></h3>
                <h5 class="answers_counts">Answers</h5>
              </div>
              <div class="box_cell box2">
                <h3><%= link_to question.title, question_path(question) %></h3>
                <td><%= truncate(question.description.html_safe, length: 300) %></td>
              </div>
            </div>
        </div><hr>
      <% end %><hr>
    </div><br>

    <center><%= paginate @questions %></center>
  </body>
</html>
